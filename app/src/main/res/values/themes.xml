<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InfoPharm" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#69C0FF</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="fabRound" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/fabStyle</item>
    </style>

    <style name="fabStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20%</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>
    <style name="MyActionBar"
        parent="@style/Theme.AppCompat.DayNight">
<!--    <item name="android:titleTextStyle">@style/TitleTextStyle</item>-->
    <item name="android:background">@drawable/custom_bar</item>
    <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">11dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
    </style>

</resources>