<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailActivity"
    android:background="#FFCC69">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20sp">

        <TextView
            android:id="@+id/nama_obat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Nama Obat"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textStyle="bold"
            android:fontFamily="@font/outfit_semibold"/>

        <TextView
            android:id="@+id/golongan_obat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Golongan"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/outfit_light"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/round_img"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                >
                <ImageView
                    android:id="@+id/iv_foto"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/no_image"
                    android:padding="50dp"
                    android:background="#FFCC69"
                    />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/corner_desk_parent"
            android:layout_marginTop="20dp"
            android:paddingBottom="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:background="@drawable/corner_desk_title"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/outfit_medium"
                android:textSize="25dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsinya"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/outfit_light"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/corner_desk_parent"
            android:layout_marginTop="20dp"
            android:paddingBottom="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bentuk Obat"
                android:background="@drawable/corner_bentuk_title"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/outfit_medium"
                android:textSize="25dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/bentuks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bentuknya"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/outfit_light"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/corner_desk_parent"
            android:layout_marginTop="20dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/corner_efek_title"
                android:fontFamily="@font/outfit_medium"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Efek Samping"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/efek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Efek sampingnya"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/outfit_light"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>