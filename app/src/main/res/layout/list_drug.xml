<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="20dp"
    android:background="@drawable/corner_radius_krs"
    >
    <LinearLayout
        android:id="@+id/ll_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/corn_foto"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Iv_foto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/no_image"
            android:padding="3dp"
            android:theme="@style/roundedImageView"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_obat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/ll_foto"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/ll_action"
        >

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Obat"
            android:textSize="25sp"
            android:fontFamily="@font/outfit_semibold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id"
            android:textSize="18sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_golongan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Golongan Obat"
            android:fontFamily="@font/outfit_light"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_Bentuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bentuk Obat"
            android:textSize="18sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_Efek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Efek samping Obat"
            android:textSize="18sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Obat"
            android:textSize="18sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto Obat"
            android:textSize="18sp"
            android:visibility="gone"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/bt_edit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_edit_24"
            android:background="@drawable/corner_circle"
            app:tint="@color/black"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:id="@+id/bt_hapus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_delete_24"
            android:background="@drawable/corner_circle"
            app:tint="@color/black"
            />
    </LinearLayout>


</RelativeLayout>