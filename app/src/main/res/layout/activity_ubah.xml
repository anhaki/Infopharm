<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UbahActivity"
    android:background="#FFCC69">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Ubah Obat"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textStyle="bold"
            android:fontFamily="@font/outfit_semibold"/>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_img"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                >
                <ImageView
                    android:id="@+id/iv_foto"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_baseline_add_a_photo_24"
                    android:padding="50dp"
                    android:clipToOutline="true"
                    android:background="#FFCC69"
                    />
            </androidx.cardview.widget.CardView>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:backgroundTint="#73B8EB"
                app:backgroundTint="@color/black"
                app:elevation="0dp"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_edit_24"
                app:borderWidth="3dp"
                app:fabCustomSize="40dp"
                app:maxImageSize="20dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Obat"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/outfit_medium"
            />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_et"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Golongan Obat"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/outfit_medium"
            />

        <Spinner
            android:id="@+id/sp_Golongan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_et"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:autofillHints="21sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bentuk Obat"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/outfit_medium"
            />
        <EditText
            android:id="@+id/et_bentuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_et"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Obat"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/outfit_medium"
            />
        <EditText
            android:id="@+id/et_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_et"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Efek Samping Obat"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/outfit_medium"
            />
        <EditText
            android:id="@+id/et_efek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_et"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ubah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Ubah"
            android:textSize="21sp"
            android:backgroundTint="#73EB77"
            app:cornerRadius="15dp"
            android:padding="15dp"
            android:textColor="@color/black"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:fontFamily="@font/outfit_semibold"
            />
    </LinearLayout>

</ScrollView>